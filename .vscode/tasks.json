{
  "version": "2.0.0",
  "tasks": [
      {
          "type": "shell",
          "label": "g++ build active file",
          "command": "/usr/bin/g++",
          "args": [
              "-g",
              "-pg",
              "-std=c++11",
              "${fileDirname}/**.cpp",
              "-o",
              "${fileDirname}/shortest"
          ],
          "options": {
              "cwd": "/usr/bin"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": "build"
      }
  ]
}